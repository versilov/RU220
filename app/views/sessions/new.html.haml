%h1 Вход
  
- if flash[:alert]
  %p#notice= flash[:alert]
    
= form_tag do
  %fieldset
    %legend Войдите
    
    %div
      %label{ :for => 'login'} Логин
      %br
      = text_field_tag :login, params[:login]
      
    %div
      %label{ :for => 'password' } Пароль
      %br
      = password_field_tag :password, params[:password]
      
    %div
      = submit_tag 'Войти'

