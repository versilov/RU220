<h1>Пользователи</h1>
<% if notice -%>
  <p id="notice"><%= notice %></p>
<% end -%>

<table>
  <tr>
    <th>Логин</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= link_to 'Смотр.', user %></td>
    <td><%= link_to 'Редакт.', edit_user_path(user) %></td>
    <td><%= link_to 'Удал.', user, :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

