      (w[c] = w[c] || []).push(function() {
        try {
              w.yaCounter9651256 = new Ya.Metrika({id:9651256, enableAll: true, trackHash:true});
        }
        catch(e) { }
      });
      })(window, "yandex_metrika_callbacks");
    </div>
